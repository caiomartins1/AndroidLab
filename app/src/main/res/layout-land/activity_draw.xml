    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DrawActivity"
    >


    <fragment
        android:name="dev.caiomartins.androidlab.fragments.CanvasFragment"
        android:id="@+id/canvas_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7" />

    <fragment
        android:id="@+id/palette_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="dev.caiomartins.androidlab.fragments.PaletteFragment"
        android:layout_weight="0.3"/>


</androidx.appcompat.widget.LinearLayoutCompat>